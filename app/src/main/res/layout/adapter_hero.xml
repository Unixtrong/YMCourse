<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/l37_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/l37_tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/l37_tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/l37_tv_name"
        android:text="gender"/>

    <TextView
        android:id="@+id/l37_tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/l37_tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/l37_tv_gender"
        android:text="team"/>

    <TextView
        android:id="@+id/l37_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l37_tv_name"
        android:layout_marginTop="5dp"
        android:text="description"/>
</RelativeLayout>