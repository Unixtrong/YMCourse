<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l7_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huangshan.demo.ui.L7TestActivity">

    <TextView
        android:id="@+id/l7_test_tv_rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/l7_test_iv_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l7_test_tv_rem"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="103dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/l7_test_btn_buy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l7_test_iv_item1"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:onClick="onClickBuy1"
        android:text="Button" />

    <Button
        android:id="@+id/l7_test_btn_buy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/l7_test_btn_buy1"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/l7_test_tv_rem"
        android:layout_toRightOf="@+id/l7_test_tv_rem"
        android:onClick="onClickBuy2"
        android:text="Button" />

    <TextView
        android:id="@+id/l7_test_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l7_test_btn_buy2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/l7_test_iv_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l7_test_btn_buy1"
        android:layout_alignEnd="@+id/l7_test_btn_buy2"
        android:layout_alignRight="@+id/l7_test_btn_buy2"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>
